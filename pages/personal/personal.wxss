@import "/personality.wxss";

.top_portrait {
  margin: 60rpx auto;
  align-items: center;
}

.name_pig {
  margin-top: 40rpx;
}

.data_group {
  padding-bottom: 50rpx;
  width: 100%;
  align-items: center;
  /* border-bottom: 2rpx solid #e1e1e1; */
}

.dg_column {
  align-items: center;
  width: 33.3333%;
}

.fn_data {
  font-size: 48rpx;
  margin-top: 15rpx;
}

.li_maincontent {
  align-items: center;
  flex-wrap: wrap;
  width: calc(100% + 30rpx);
  padding-bottom: 30rpx;
}

.li_maincontent>view {
  flex-shrink: 0;
  padding-right: 30rpx;
  width: 25%;
  margin-top: 30rpx;
}

.central_options {
  width: 100%;
  padding-top: 100%;
  position: relative;
  border-radius: 50%;
}

.dynamic_back {
  position: fixed;
  height: 100vh;
}

.db_circular1 {
  bottom: -10%;
  width: 600rpx;
  height: 600rpx;
}

.db_circular2 {
  bottom: -10%;
  left: -30%;
  width: 800rpx;
  height: 800rpx;
}

.db_circular3 {
  top: -10%;
  width: 700rpx;
  height: 700rpx;
}

.trash {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  padding: 40rpx;
}

.trash>view {
  width: 100%;
  height: 100%;
  align-items: center;
  position: relative;
}

.trash_top {
  width: 35rpx;
  height: 10rpx;
  border: 2rpx solid #999;
  border-bottom: 0;
  border-radius: 10rpx 10rpx 0 0;
}

.trash_center {
  width: 100%;
  border-bottom: 2rpx solid #999;
}

.trash_bottom {
  width: 70%;
  height: calc(100% - 12rpx);
  border: 2rpx solid #999;
  border-top: 0;
  border-radius: 0 0 10rpx 10rpx;
  position: relative;
}

.trash_bottom1 {
  width: 100%;
  height: 10rpx;
  background-color: #999;
  position: absolute;
  left: 0;
  bottom: 0;
  opacity: 0.3;
}

.lm_title {
  margin-top: 20rpx;
  text-align: center;
}

.pen_top {
  width: 30rpx;
  height: calc(100% - 25rpx);
  border-radius: 100rpx 100rpx 0 0;
}

.pen_button {
  width: 21rpx;
  height: 21rpx;
  bottom: 5rpx;
  left: 25rpx;
}
.index_regular {
  text-align:center;
  font-size: 28rpx;
  margin-top: 100rpx;
  color: #999;
}

.class_url {
  padding: 0 10rpx;
  background-color: azure;
  font-size: 36rpx;
  color: #000;
  
}